<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_blue2"
    android:focusable="true"  
   	android:focusableInTouchMode="true"
    tools:context=".SearchActivity" >

    <LinearLayout 
        android:id="@+id/search_header"
        android:layout_width="match_parent"
    	android:layout_height="90dp"
    	android:orientation="horizontal"
    	android:background="@drawable/main_top"
    	android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/search_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="22.5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_gravity="left"
            android:src="@drawable/back"
            />
        <LinearLayout 
            android:layout_width="0dp"
    		android:layout_height="75dp"
    		android:layout_weight="5"
    		android:orientation="horizontal"
    		android:gravity="center_vertical"
    		android:background="@drawable/bg_search"
            >
            <EditText 
                android:id="@+id/search_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="60dp"
                android:background="#00000000"
                />
            <ImageView 
                android:id="@+id/search_btn"
           	 	android:layout_width="0dp"
            	android:layout_height="75dp"
            	android:layout_weight="1"
            	android:clickable="true"
            	android:layout_marginRight="30dp"
            	android:src="@drawable/bt_search"
            	/>
        </LinearLayout>
    </LinearLayout>
    
    <GridView
        android:id="@+id/search_gridview"
        android:layout_below="@id/search_header"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
   		android:paddingTop="22.5dp"
   		android:paddingLeft="25dp"
   		android:paddingRight="15dp"
    	android:numColumns="3"
    	android:stretchMode="columnWidth"
    	android:verticalSpacing="30dp"
    	android:horizontalSpacing="15dp"
    	android:descendantFocusability="blocksDescendants"
    	android:gravity="center">
    </GridView>
    
    <RelativeLayout 
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#55000000"
        android:visibility="gone">
        
        <com.sungy.onegame.view.LoadingImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            >        
        </com.sungy.onegame.view.LoadingImageView>
        
    </RelativeLayout>

</RelativeLayout>
