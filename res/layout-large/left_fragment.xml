<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_blue2"
    android:gravity="center_horizontal"
     >
     <LinearLayout 
        android:layout_width="360dp"
    	android:layout_height="90dp"
    	android:background="@drawable/main_top1">
     </LinearLayout>
     
     <LinearLayout 
        android:layout_width="345dp"
    	android:layout_height="fill_parent"
    	android:layout_marginTop="120dp"
		android:layout_marginBottom="67.5dp"
    	android:background="@drawable/left_bg">
    	 
	     <RelativeLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:background="@drawable/dot_line"
		     >
		     
	         <ImageView
	             android:id="@+id/pen"
	             android:layout_width="60dp"
	             android:layout_height="fill_parent"
	             android:layout_alignParentRight="true"
	             android:layout_marginBottom="30dp"
	             android:layout_marginTop="30dp"
	             android:background="@drawable/pen" />
		    
		     <LinearLayout
		        android:id="@+id/login"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="22.5dp"
		        android:orientation="horizontal">
		        <com.sungy.onegame.view.RoundImageView
			        android:layout_width="90dp"
			        android:layout_height="90dp"
			        android:id="@+id/userImage"
			        android:scaleType="fitXY"
			        android:src="@drawable/defaultimage"
		        /> 
		        <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/userName"
		            android:text="name"
		            android:singleLine="true"
		            android:textSize="15sp"
		            android:padding="4.5dp"
		            android:textColor="@android:color/black"
		            />
		        <TextView 
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:id="@+id/userLogin"
		        	android:text="登录"
		        	android:singleLine="true"
		        	android:textSize="15sp"
		        	android:padding="4.5dp"
		        	android:textColor="@android:color/black"
		        	/>
		    	</LinearLayout>  
		        
		    </LinearLayout>
		   
		     <LinearLayout 
		         android:layout_below="@id/login"
		         android:id="@+id/one_game"
		         android:layout_width="270dp"
		         android:layout_height="wrap_content"
		         android:orientation="horizontal"
		         android:gravity="center_vertical"
		         android:clickable="true"
		         android:layout_marginLeft="30dp"
		         android:layout_marginBottom="12dp"
		         >
		        <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/menu_onegame" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7.5dp"
                    android:src="@drawable/text_onegame" />

		     </LinearLayout>
		     
		     <LinearLayout 
		         android:layout_below="@id/one_game"
		         android:id="@+id/one_favorite"
		         android:layout_width="270dp"
		         android:layout_height="wrap_content"
		         android:orientation="horizontal"
		         android:gravity="center_vertical"
		         android:clickable="true"
		         android:layout_marginLeft="30dp"
		         android:layout_marginBottom="12dp"
		         >
		        <ImageView 
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/menu_favorite"
		        />
		         <ImageView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/text_favorite" />
		     </LinearLayout>
		     
		     <LinearLayout 
		         android:layout_below="@id/one_favorite"
		         android:id="@+id/one_about"
		         android:layout_width="270dp"
		         android:layout_height="wrap_content"
		         android:orientation="horizontal"
		         android:gravity="center_vertical"
		         android:clickable="true"
		         android:layout_marginLeft="30dp"
		         android:layout_marginBottom="12dp"
		         >
		        <ImageView 
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/menu_about"
		        />
		        <ImageView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7.5dp"
                    android:src="@drawable/text_about" />
		     </LinearLayout>
		     
		     <LinearLayout 
		         android:layout_below="@id/one_about"
		         android:id="@+id/one_recommend"
		         android:layout_width="270dp"
		         android:layout_height="wrap_content"
		         android:orientation="horizontal"
		         android:gravity="center_vertical"
		         android:clickable="true"
		         android:layout_marginLeft="30dp"
		         android:layout_marginBottom="12dp"
		         >
		        <ImageView 
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/menu_recommend"
		        />
		        <ImageView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7.5dp"
                    android:src="@drawable/text_recommend" />
		     </LinearLayout>
		     
		     <LinearLayout 
		         android:id="@+id/one_feedback"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:orientation="vertical"
		         android:gravity="center"
		         android:layout_alignParentLeft="true"
		         android:layout_alignParentBottom="true"
		         android:clickable="true"
		         android:layout_marginLeft="30dp"
		         android:layout_marginBottom="30dp"
		         >

		         <ImageView
		             android:layout_width="45dp"
		             android:layout_height="45dp"
		             android:src="@drawable/menu_feedback" />

		         <ImageView
		             android:layout_width="37.5dp"
		             android:layout_height="22.5dp"
		             android:src="@drawable/text_feedback" />

		     </LinearLayout>
		    
		     <ImageView
		             android:layout_width="150dp"
		             android:layout_height="45dp"
		             android:src="@drawable/text_tron" 
		             android:layout_alignParentBottom="true"
		            	android:layout_centerHorizontal="true"/>
		</RelativeLayout>
		
	</LinearLayout>
	
</RelativeLayout>
