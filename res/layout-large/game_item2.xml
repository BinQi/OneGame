<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/card_bg"
    android:paddingLeft="24dp"
    android:paddingRight="21dp"
    android:paddingTop="31.5dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:src="@drawable/defalut2"
        android:scaleType="fitXY" />
    
    <TextView 
    	android:id="@+id/title"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
    	android:textColor="#5197E0"
    	android:layout_gravity="right"
    	android:paddingRight="33dp"
    	android:paddingTop="52.5dp"
        />
    
    <TextView 
	    android:id="@+id/abstractt"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:layout_marginTop="0dp"
       	android:layout_marginBottom="7.5dp"
       	android:layout_marginLeft="22.5dp"
       	android:layout_marginRight="22.5dp"
       	android:maxLines="6"
        />
    
    <ImageView 
        android:layout_width="fill_parent"  
	    android:layout_height="1px"  
	    android:background="?android:attr/listDivider" 
	    />
    

<RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"  
        android:gravity="center_vertical"
        android:id="@+id/footer"
        >
        <ImageView 
            android:id="@+id/praise"
            android:layout_width="45dp"
        	android:layout_height="fill_parent"
        	android:src="@drawable/detail_praise"
        	android:layout_marginLeft="15dp"
        	android:clickable="true"
        	android:focusable="false"
        	android:layout_gravity="left"
        	android:layout_alignParentLeft="true"
            />
        <TextView 
        	android:id="@+id/praiseNo"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="7.5dp"
        	android:textColor="#aaaaaa"
        	android:textSize="30dp"
        	android:text="247"
        	android:layout_gravity="center"
        	android:layout_toRightOf="@id/praise"
        	android:layout_centerVertical="true"
        />
        <!-- 
        <TextView 
	        android:id="@+id/day"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="3.12"
	        android:textStyle="bold"
	        android:textColor="#5197E0"
	        android:gravity="center"
	        android:layout_marginLeft="55dp"
        />
         -->
         
         <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/date_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar"
                android:textColor="#5197E0"
                android:textSize="22.5dp" />

            <TextView
                android:id="@+id/date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textColor="#5197E0"
                android:textSize="45dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期一"
                android:textColor="#5197E0"
                android:textSize="18dp" 
                android:layout_marginTop="-15dp"/>

            <TextView
                android:id="@+id/date_week2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textColor="#5197E0"
                android:textSize="18dp" 
                android:layout_marginTop="-15dp"/>
        </GridLayout>
        
         

    </RelativeLayout>

    

</LinearLayout>
