<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/card_bg"
    android:paddingLeft="16dp"
    android:paddingRight="14dp"
    android:paddingTop="21dp"
    android:id="@+id/game_container">

    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/defalut2" />
    
    <TextView 
    	android:id="@+id/title"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
    	android:text="时空猎人"
    	android:textColor="#5197E0"
    	android:layout_gravity="right"
    	android:paddingRight="22dp"
    	android:paddingTop="35dp"
    	android:textSize="25dp"
        />
    
    <TextView 
	    android:id="@+id/abstractt"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:layout_marginTop="0dp"
       	android:layout_marginBottom="5dp"
       	android:layout_marginLeft="15dp"
       	android:layout_marginRight="15dp"
       	android:maxLines="6"
       	android:textSize="16dp"
        />
    
    <ImageView 
        android:layout_width="fill_parent"  
	    android:layout_height="1px"  
	    android:background="?android:attr/listDivider" 
	    />
    

   <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"  
        android:gravity="center_vertical"
        android:id="@+id/footer"
        >
        <ImageView 
            android:id="@+id/praise"
            android:layout_width="30dp"
        	android:layout_height="fill_parent"
        	android:src="@drawable/detail_praise"
        	android:layout_marginLeft="10dp"
        	android:clickable="true"
        	android:focusable="false"
        	android:layout_gravity="left"
        	android:layout_alignParentLeft="true"
            />
        <TextView 
        	android:id="@+id/praiseNo"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="5dp"
        	android:textColor="#aaaaaa"
        	android:textSize="20dp"
        	android:text="247"
        	android:layout_gravity="center"
        	android:layout_toRightOf="@id/praise"
        	android:layout_centerVertical="true"
        />
        <!-- 
        <TextView 
	        android:id="@+id/day"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="3.12"
	        android:textStyle="bold"
	        android:textColor="#5197E0"
	        android:gravity="center"
	        android:layout_marginLeft="55dp"
        />
         -->
         
         <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/date_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar"
                android:textColor="#5197E0"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textColor="#5197E0"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期一"
                android:textColor="#5197E0"
                android:textSize="12dp" 
                android:layout_marginTop="-10dp"/>

            <TextView
                android:id="@+id/date_week2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textColor="#5197E0"
                android:textSize="12dp" 
                android:layout_marginTop="-10dp"/>
        </GridLayout>
        
         

    </RelativeLayout>

    

</LinearLayout>
