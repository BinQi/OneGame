<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/recommend_bg" >

        <LinearLayout
            android:id="@+id/comment_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:padding="5dp"
                android:src="@drawable/text_recommend" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="3月8号日  星期二"
                android:textColor="#000000"
                android:textSize="15sp" />
            
            <ImageView android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/recommend_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recomment_icon_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/comment_header" >

            <ImageView android:layout_width="0dp" 
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/recommend_icon"/>
            
            <TextView 
                android:id="@+id/recomment_text"
                android:layout_width="0dp" 
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="15sp"
                android:text="		您在每日游支持的每一个游戏，都在构筑着我们的游戏世界。每日游，专注游戏每一天，快乐游戏到永远。"/>
        </LinearLayout>

        <TextView 
            android:id="@+id/comment"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp" 
            android:layout_marginRight="15dp"
            android:layout_below="@id/recomment_icon_text"
            android:layout_width="match_parent"
            android:layout_height="40dp" 
            android:textSize="15sp"
            android:text="		点击链接下载每日游，畅想精致游戏，玩转您的游戏世界:www.baidu.com"/>
        

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <ImageView 
                android:id="@+id/recommend_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/recommend_cancel" />
            
            <ImageView
                android:id="@+id/recommend_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/recommend_btn" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>